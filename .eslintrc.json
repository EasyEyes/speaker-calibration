{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": ["airbnb-base", "prettier", "plugin:compat/recommended"],
  "plugins": ["no-floating-promise"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "no-console": 0, //TODO: set to 1 in final submission
    "class-methods-use-this": 0, //TODO: set to 1 in final submission
    "require-jsdoc": [
      "error",
      {
        "require": {
          "FunctionDeclaration": true,
          "MethodDefinition": true,
          "ClassDeclaration": true,
          "ArrowFunctionExpression": true,
          "FunctionExpression": true
        }
      }
    ],
    "no-floating-promise/no-floating-promise": 2
  },
  "settings": {
    "polyfills": [
      "Promise",
      "Array.from",
      "Object.fromEntries",
      "navigator.mediaDevices",
      "AudioContext",
      "MediaRecorder",
      "URLSearchParams"
    ]
  }
}
